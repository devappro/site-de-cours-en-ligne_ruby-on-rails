<h1><%= @courses.count%>  Courses available ! </h1>

<hr/>

<div class="row">

        <% @courses.each do |course| %>
        
        
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <%= image_tag course.image.url(:thumb), alt: course.title %>      
                <div class="caption">
                    <h3><%= course.title %></h3>
                    <p> <%= course.description%> </p>
                    <p><a href="#" class="btn btn-primary" role="button">Visionner le cours</a>
              </div>
            </div>
          </div>
          
              <% end %>
</div>

   
